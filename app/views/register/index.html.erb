<div class="top_register"></div>
<%= form_for 'register_form',:url => {:controller=>"register",:action => "register"} do |f| %>
<div class="register">
  <div class="logo_register">
    <%= image_tag("logo_login02.gif") %>
  </div>
  <div class="content_register">
  <div class="top_bg"></div>
  <ul class="login_top">
	<li><%=  image_tag("pic_login01.gif")%></li>
	<li><%=  image_tag("pic_login03.gif")%></li>
  </ul>
  <table class="ipt_box">
    <tr>
      <td><%= f.label "用户名" %><span class="required"> *</span></td>
    <td>
        <%= f.text_field :name,:required => true %>
        <%= observe_field :text_test,  :update => 'name_message',
                          :url => {:action => 'validate_name_unique', :only_path=>false},
                          :with => :name %>
    </td>
    <td><div id="name_message"></div></td>
    </tr>
    <tr><td>&nbsp;</td></tr>
    <tr>
    <td><%= f.label "密码" %><span class="required"> *</span></td>
    <td><%= f.password_field :password,:required => true %></td>
    </tr>
    <tr><td>&nbsp;</td></tr>
    <tr>
    <td><%= f.label "密码确认" %><span class="required"> *</span></td>
    <td><%= f.password_field :password_again,:required => true %></td>
    </tr>
    <tr><td>&nbsp;</td></tr>
    <tr>
    <td><%= f.label "邮箱" %><span class="required"> *</span></td>
    <td><%= f.text_field :email,:required => true %></td>
    </tr>
    <tr><td>&nbsp;</td></tr>
    <tr>
    <td><%= f.label "单位" %></td>
    <td><%= f.text_field :company %></td>
    </tr>
  </table>
  <br/><br/><br/>
  <div class="register_button">
	<%= f.submit "注册"  %>
  </div>
  <div class="btm_bg"></div>
  </div>
<% end %>
